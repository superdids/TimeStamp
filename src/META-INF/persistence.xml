<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence persistence_1_0.xsd"
	version="1.0">
	<persistence-unit name="Stamp">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
	<class>eu.jeisn.stamp.models.User</class>
		<class>eu.jeisn.stamp.models.Project</class>
		<class>eu.jeisn.stamp.models.ParticipationId</class>
		<class>eu.jeisn.stamp.models.Participation</class>
		<class>eu.jeisn.stamp.models.Task</class>
			
		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/timestamp" />
			<property name="javax.persistence.jdbc.user" value="postgres" />
			<property name="javax.persistence.jdbc.password" value="postgres" />
		</properties>
	</persistence-unit>
	
	
</persistence> 